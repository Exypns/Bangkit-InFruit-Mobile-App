<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/header_background"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profilePhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/profilePhoto"
        app:layout_constraintStart_toEndOf="@id/profilePhoto"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:text="Hello," />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/greeting"
        app:layout_constraintStart_toEndOf="@id/profilePhoto"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Nama" />

    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profilePhoto"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="Letâ€™s Grow Together, " />

    <TextView
        android:id="@+id/tagline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tagline"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="Support Local Products!" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/cartButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle_button"
        android:src="@drawable/ic_cart"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/profilePhoto"
        app:layout_constraintBottom_toBottomOf="@id/profilePhoto" />

    <TextView
        android:id="@+id/specialTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dark_gray"
        android:text="Special for you" />

    <TextView
        android:id="@+id/viewMoreSpecialTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View More"
        android:textColor="@color/light_gray"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/specialTextView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/specialImageView"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:cardCornerRadius="17dp"
        app:cardBackgroundColor="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/specialTextView" >

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            app:iss_auto_cycle="true"
            app:iss_period="2000"
            app:iss_delay="2000"
            app:iss_text_align="CENTER"
            app:iss_corner_radius="20" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/popularProductTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/specialImageView"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dark_gray"
        android:text="Popular Product" />

    <TextView
        android:id="@+id/viewMoreProductTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View More"
        android:textColor="@color/light_gray"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/popularProductTextView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popularProductRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/popularProductTextView"
        tools:background="@color/light_gray" />

</androidx.constraintlayout.widget.ConstraintLayout>