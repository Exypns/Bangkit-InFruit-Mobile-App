<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/header_background"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profilePhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/profilePhoto"
        app:layout_constraintStart_toEndOf="@id/profilePhoto"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:text="Hello," />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/greeting"
        app:layout_constraintStart_toEndOf="@id/profilePhoto"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Nama" />

    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profilePhoto"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="Letâ€™s Grow Together, " />

    <TextView
        android:id="@+id/tagline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tagline"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="Support Local Products!" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/cartButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle_button"
        android:src="@drawable/ic_cart"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/profilePhoto"
        app:layout_constraintBottom_toBottomOf="@id/profilePhoto" />

    <TextView
        android:id="@+id/specialTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dark_gray"
        android:text="Special for you" />

    <TextView
        android:id="@+id/viewMoreSpecialTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View More"
        android:textColor="@color/light_gray"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/specialTextView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/specialImageView"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:cardCornerRadius="17dp"
        app:cardBackgroundColor="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/specialTextView" >

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            app:iss_auto_cycle="true"
            app:iss_period="2000"
            app:iss_delay="2000"
            app:iss_text_align="CENTER"
            app:iss_corner_radius="20" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/popularProductTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/specialImageView"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dark_gray"
        android:text="Popular Product" />

    <TextView
        android:id="@+id/viewMoreProductTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View More"
        android:textColor="@color/light_gray"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/popularProductTextView" />

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/popularProductRecyclerView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:layout_marginStart="24dp"-->
<!--        android:layout_marginEnd="24dp"-->
<!--        app:layout_constraintTop_toBottomOf="@id/popularProductTextView"-->
<!--        tools:background="@color/light_gray" />-->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardProductView"
        android:layout_gravity="center"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:layout_marginTop="6dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/popularProductTextView"
        app:layout_constraintStart_toStartOf="@id/specialImageView"
        app:cardCornerRadius="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="150dp"
                android:layout_height="121dp"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@color/orange_tertiary"/>

            <TextView
                android:id="@+id/productTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/productImage"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:maxLines="2"
                android:text="Product Title" />

            <TextView
                android:id="@+id/shopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:textSize="10sp"
                app:layout_constraintTop_toBottomOf="@id/productTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="0dp"
                android:layout_marginStart="5dp"
                android:maxLines="1"
                android:text="Shop Title" />

            <ImageView
                android:id="@+id/starIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/shopName"
                app:layout_constraintStart_toStartOf="@id/shopName"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_star" />

            <TextView
                android:id="@+id/ratingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/starIcon"
                app:layout_constraintBottom_toBottomOf="@id/starIcon"
                app:layout_constraintStart_toEndOf="@id/starIcon"
                android:layout_marginStart="3dp"
                android:textColor="@color/yellow"
                android:textSize="8sp"
                android:text="5.0" />

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange_secondary"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                app:layout_constraintTop_toBottomOf="@id/starIcon"
                app:layout_constraintStart_toStartOf="@id/shopName"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="Rp 35.000" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/likedButton"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/circle_button"
                android:src="@drawable/ic_liked"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:outlineSpotShadowColor="@color/dark_gray"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardProductView2"
        android:layout_gravity="center"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:layout_marginTop="6dp"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/popularProductTextView"
        app:layout_constraintStart_toEndOf="@id/cardProductView"
        app:cardCornerRadius="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/productImage2"
                android:layout_width="150dp"
                android:layout_height="121dp"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@color/orange_tertiary"/>

            <TextView
                android:id="@+id/productTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/productImage2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:maxLines="2"
                android:text="Product Title" />

            <TextView
                android:id="@+id/shopName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:textSize="10sp"
                app:layout_constraintTop_toBottomOf="@id/productTitle2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="0dp"
                android:layout_marginStart="5dp"
                android:maxLines="1"
                android:text="Shop Title" />

            <ImageView
                android:id="@+id/starIcon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/shopName2"
                app:layout_constraintStart_toStartOf="@id/shopName2"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_star" />

            <TextView
                android:id="@+id/ratingTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/starIcon2"
                app:layout_constraintBottom_toBottomOf="@id/starIcon2"
                app:layout_constraintStart_toEndOf="@id/starIcon2"
                android:layout_marginStart="3dp"
                android:textColor="@color/yellow"
                android:textSize="8sp"
                android:text="5.0" />

            <TextView
                android:id="@+id/productPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange_secondary"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                app:layout_constraintTop_toBottomOf="@id/starIcon2"
                app:layout_constraintStart_toStartOf="@id/shopName2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="Rp 35.000" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/likedButton2"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/circle_button"
                android:src="@drawable/ic_liked"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:outlineSpotShadowColor="@color/dark_gray"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>