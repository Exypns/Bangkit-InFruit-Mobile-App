<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.shop.ShopFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/dark_gray"
        android:text="Shop Fragment" />

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/header_background"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shopTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="@id/header"
        app:layout_constraintStart_toStartOf="@id/header"
        android:text="Shop" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/cartButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/circle_button"
        android:src="@drawable/ic_cart"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/shopTextView"
        app:layout_constraintBottom_toBottomOf="@id/shopTextView"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/shopHistoryButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/circle_button"
        android:src="@drawable/ic_shop_history"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/cartButton"
        app:layout_constraintTop_toTopOf="@id/shopTextView"
        app:layout_constraintBottom_toBottomOf="@id/shopTextView"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/likedButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/circle_button"
        android:src="@drawable/ic_liked"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/shopHistoryButton"
        app:layout_constraintTop_toTopOf="@id/shopTextView"
        app:layout_constraintBottom_toBottomOf="@id/shopTextView"/>

</androidx.constraintlayout.widget.ConstraintLayout>